<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <include
        android:id="@+id/main_toolbar"
        layout="@layout/main_toolbar"/>

    <Button android:id="@+id/option_add_entry"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10px"
            android:layout_marginBottom="10px"
            android:layout_below="@+id/main_toolbar"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:background="@color/buttonAddEntry"
            android:textSize="@dimen/option_font_size"
            android:text="@string/option_add_entry"
            android:onClick="addEntry"
            style="?android:attr/borderlessButtonStyle" />

    <Button android:id="@+id/option_view_entries"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10px"
            android:layout_below="@+id/option_add_entry"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:background="@color/buttonViewEntry"
            android:textSize="@dimen/option_font_size"
            android:text="@string/option_view_entries"
            android:onClick="viewEntries"
            style="?android:attr/borderlessButtonStyle"/>

    <Button android:id="@+id/option_view_tabbed"
            android:layout_centerInParent="true"
            android:layout_below="@+id/option_view_entries"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:background="@color/buttonViewEntry"
            android:textSize="@dimen/option_font_size"
            android:text="Tabbed"
            android:onClick="viewTabbed"
            style="?android:attr/borderlessButtonStyle"/>

</RelativeLayout>